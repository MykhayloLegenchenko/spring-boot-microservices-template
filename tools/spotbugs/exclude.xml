<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!--Disable RCN_REDUNDANT_NULLCHECK_OF_NONNULL_VALUE warning for equals and hashCode generated by Lombok-->
    <!-- Required because Lombok-generated equals and hashCode currently does not respect nullability annotations -->
    <Match>
        <Bug pattern="RCN_REDUNDANT_NULLCHECK_OF_NONNULL_VALUE"/>
        <!-- currently annotation matcher does not support method annotations -->
        <!--Annotation name="lombok.Generated"/-->
        <Or>
            <Method name="equals" params="java.lang.Object" returns="boolean"/>
            <Method name="hashCode" params="" returns="int"/>
        </Or>
    </Match>

    <!--Disable NP_NULL_PARAM_DEREF for test Mapstruct mappers -->
    <!-- Required because Mapstruct currently does not respect nullability annotations -->
    <Match>
        <Bug pattern="NP_NULL_PARAM_DEREF"/>
        <Class name="~.*TestMapperImpl"/>
    </Match>

    <!-- Disable EI_EXPOSE_REP and EI_EXPOSE_REP2 warnings because following these rules may cause performance problems -->
    <Match>
        <Bug pattern="EI_EXPOSE_REP, EI_EXPOSE_REP2"/>
    </Match>

    <!-- Disable EQ_UNUSUAL warnings for JPA entities -->
    <Match>
        <Bug pattern="EQ_UNUSUAL"/>
        <Annotation name="jakarta.persistence.Entity"/>
    </Match>

    <!-- Disable UUF_UNUSED_PUBLIC_OR_PROTECTED_FIELD and UWF_UNWRITTEN_PUBLIC_OR_PROTECTED_FIELD warnings for metamodels -->
    <Match>
        <Bug pattern="UUF_UNUSED_PUBLIC_OR_PROTECTED_FIELD, UWF_UNWRITTEN_PUBLIC_OR_PROTECTED_FIELD"/>
        <Annotation name="jakarta.persistence.metamodel.StaticMetamodel"/>
    </Match>

    <!-- Disable NP_NONNULL_FIELD_NOT_INITIALIZED_IN_CONSTRUCTOR and NP_PARAMETER_MUST_BE_NONNULL_BUT_MARKED_AS_NULLABLE for Lombok builders -->
    <!-- Required because Lombok currently does not preserve @Nullable annotation in builder's field declaration -->
    <Match>
        <Bug pattern="NP_NONNULL_FIELD_NOT_INITIALIZED_IN_CONSTRUCTOR, NP_PARAMETER_MUST_BE_NONNULL_BUT_MARKED_AS_NULLABLE"/>
        <Class name="~.*\$Builder"/>
        <Annotation name="lombok.Generated"/>
    </Match>
</FindBugsFilter>
